        "localAddressSpace": "[parameters('localAddressSpace')]",
        "localSubnetNames": "[parameters('localSubnetNames')]",
        "peerCompleteVnets": "[parameters('peerCompleteVnets')]",
        "remoteAddressSpace": "[parameters('remoteAddressSpace')]",
        "remoteSubnetNames": "[parameters('remoteSubnetNames')]",
        "useRemoteGateways": "[parameters('useRemoteGateways')]",
