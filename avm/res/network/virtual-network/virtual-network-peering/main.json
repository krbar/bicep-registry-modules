    "remoteAddressSpace": {
      "type": "object",
      "metadata": {
        "__bicep_resource_derived_type!": {
          "source": "Microsoft.Network/virtualNetworks/virtualNetworkPeerings@2025-05-01#properties/properties/properties/remoteAddressSpace"
        },
        "description": "Optional. The reference to the address space peered with the remote virtual network."
